{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Web API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/FinMel.Web/bin/Debug/net9.0/FinMel.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/FinMel.Web",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Debug with Aspire",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/FinMel.AppHost/bin/Debug/net9.0/FinMel.AppHost.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/FinMel.AppHost",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Attach to Web API",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack",
      "configurations": ["Debug with Aspire"],
      "stopAll": true
    }
  ]
}
